<!--==========================
  Portfolio Section
============================-->
<section id="portfolio" class="section-bg">
    <div class="container">
        <header class="section-header">
            <h3 class="section-title">Formulaire</h3>
        </header>
        <div class="row">
            <div class="col-lg-12">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">Tout</li>
                    {% for categorie in categories %}
                        <li data-filter=".filter-{{ categorie.id }}">{{ categorie.nom }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row portfolio-container">
            {% for produit in produits %}
                <div class="col-lg-4 col-md-6 portfolio-item filter-{{ produit.categorie.id }} wow fadeInUp">
                    <div class="portfolio-wrap">
                        <figure>
                            <img src="{{ produit.image.path }}" class="img-fluid" alt="">
                            {#                        <a href="img/portfolio/app1.jpg" data-lightbox="portfolio" data-title="App 1" class="link-preview" title="Preview"><i class="ion ion-eye"></i></a>#}
                            <a href="{{ path('produit', {'id': produit.id}) }}" class="link-details"
                               title="Choisir"><i class="ion ion-android-open"></i></a>
                        </figure>

                        <div class="portfolio-info">
                            <h4><a href="{{ path('produit', {'id': produit.id}) }}">{{ produit.nom }}</a></h4>
                            <p>{{ produit.categorie.nom }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
